<odoo>
    <record id="res_config_settings_view_form_inter_company" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.inter.company</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Inter-Company" string="Inter-Company" data-key="advanced_inter_company">
                    <h2>Inter-Company Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="inter_company_approval_required"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="inter_company_approval_required"/>
                                <div class="text-muted">
                                    Require approval for inter-company transactions
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>